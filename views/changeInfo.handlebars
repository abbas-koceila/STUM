<div id="title">
  <h1>Changer informations</h1>
</div>

<form id="form-hike" novalidate>

    <h3 class="titel-form">Changer informations</h3>
 <label for="form-nom" class="formlabel">Nom *</label>
    <input type="text" placeholder="Nom" class="form-control" id="form-nom" value={{compte.nom}}>
    <div id="error-nom" class="error"></div>


    <label for="form-dateDebut" class="formlabel">Prenom *</label>
    <input type="text" placeholder="Prenom" class="form-control" id="form-prenom" value={{compte.prenom}}>
    <div id="error-date" class="error"></div>

    <label for="form-capacite" class="formlabel">Addresse Courriel *</label>
    <input type="text" placeholder="Courriel" class="form-control" id="form-courriel" min="1" max="50" value={{compte.courriel}}>
    <div id="error-capacity" class="error"></div>

    <label for="form-capacite" class="formlabel">Numero de telephone *</label>
    <input type="text" placeholder="Numero de telephone" class="form-control" id="form-tel" min="1" max="50" value={{compte.numero_tel}}>
    <div id="error-capacity" class="error"></div>

    <label for="form-capacite" class="formlabel">Numero de carte sante *</label>
    <input type="number" placeholder="Numero de carte sante" class="form-control" id="form-carte" min="1" max="50" value={{compte.numero_carte_sante}}>
    <div id="error-capacity" class="error"></div>


    <a href="/patient">
      <button type="button" class="btn btn-primary mb-2 btn-lg btn-block" id="form-auth">Changer informations</button>
    </a>

  </form>


<script type="module" src="/js/home.js"></script>